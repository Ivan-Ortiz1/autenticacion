<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel Admin - Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Mi App</a>
      <div class="d-flex">
        <button onclick="window.location.href='/'" class="btn btn-outline-light">Volver al inicio</button>
      </div>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container py-5 flex-grow-1">
    <h1 class="text-center mb-4">Panel de Administración</h1>
    <div class="table-responsive shadow rounded bg-white p-3">
      <table class="table table-striped table-bordered">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u._id.replace(/</g,'&lt;').replace(/>/g,'&gt;') %></td>
              <td><%= u.username.replace(/</g,'&lt;').replace(/>/g,'&gt;') %></td>
              <td><%= u.role.replace(/</g,'&lt;').replace(/>/g,'&gt;') %></td>
              <td class="d-flex gap-2">
                <select class="form-select form-select-sm w-auto" onchange="changeRole('<%= u._id %>', this.value)">
                  <option value="user" <%= u.role === 'user' ? 'selected' : '' %>>Usuario</option>
                  <option value="admin" <%= u.role === 'admin' ? 'selected' : '' %>>Administrador</option>
                </select>
                <button class="btn btn-sm btn-danger" onclick="deleteUser('<%= u._id %>')">Eliminar</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">Challenge Autenticación - by Iván</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const csrfToken = '<%= csrfToken %>';

    async function changeRole(id, role) {
      try {
        const res = await fetch(`/admin/users/${id}/role`, {
          method: 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'CSRF-Token': csrfToken
          },
          body: JSON.stringify({ role })
        });

        if (!res.ok) {
          const err = await res.text();
          alert(`Error al actualizar rol: ${err}`);
        } else {
          alert('Rol actualizado');
        }
      } catch (err) {
        console.error(err);
        alert('Error en la comunicación con el servidor');
      }
    }

    async function deleteUser(id) {
      if (!confirm('¿Seguro que quieres eliminar este usuario?')) return;

      try {
        const res = await fetch(`/admin/users/${id}`, { 
          method: 'DELETE',
          headers: { 'CSRF-Token': csrfToken }
        });

        if (!res.ok) {
          const err = await res.text();
          alert(`Error al eliminar usuario: ${err}`);
        } else {
          location.reload();
        }
      } catch (err) {
        console.error(err);
        alert('Error en la comunicación con el servidor');
      }
    }
  </script>
</body>
</html>
