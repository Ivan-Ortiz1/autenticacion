<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Zona Protegida</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #eaeaea;
      min-height: 100vh;
    }
    .card {
      background-color: #1e1e1e;
      border: 1px solid #2c2c2c;
      border-radius: 1rem;
      color: #eaeaea;
    }
    .btn {
      border-radius: 0.5rem;
    }
    footer {
      font-size: 0.9rem;
    }
  </style>
</head>
<body class="d-flex flex-column">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-white" href="/">Passport Challenge</a>
      <div class="d-flex">
        <button id="logoutBtn" class="btn btn-outline-light ms-3">Cerrar sesión</button>
      </div>
    </div>
  </nav>

  <!-- Contenido principal -->
  <main class="container py-5 flex-grow-1 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg p-5 w-100" style="max-width: 600px;">
      <h1 class="text-center mb-4 fw-bold text-light">Zona Protegida</h1>

      <p><strong>Usuario:</strong> <%= (user?.username || '').replace(/</g,'&lt;').replace(/>/g,'&gt;') %> 
        (ID: <%= (user?.id || '').replace(/</g,'&lt;').replace(/>/g,'&gt;') %>)</p>
      <p><strong>Rol:</strong> <%= (user?.role || '').replace(/</g,'&lt;').replace(/>/g,'&gt;') %></p>

      <div class="d-grid gap-3 mt-4">
        <button id="refreshBtn" class="btn btn-primary">Refrescar Token</button>
        <button onclick="window.location.href='/'" class="btn btn-secondary">Volver al inicio</button>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-black text-muted text-center py-3 mt-auto">
    <small>Challenge Autenticación - by Iván</small>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const csrfToken = '<%= csrfToken %>';

    async function refreshToken() {
      try {
        const res = await fetch('/refresh', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'CSRF-Token': csrfToken
          }
        });
        if (!res.ok) {
          alert('Sesión expirada, volviendo al login');
          window.location.href = '/';
        } else {
          console.log('Token renovado');
        }
      } catch (err) {
        console.error('Error al refrescar token:', err);
      }
    }

    document.getElementById('refreshBtn').addEventListener('click', refreshToken);

    document.getElementById('logoutBtn').addEventListener('click', async () => {
      try {
        const res = await fetch('/logout', {
          method: 'POST',
          headers: { 'CSRF-Token': csrfToken }
        });
        if (!res.ok) {
          alert('Error al cerrar sesión');
        } else {
          window.location.href = '/';
        }
      } catch (err) {
        console.error('Error en logout:', err);
      }
    });

    // Auto-refresh cada 14 minutos
    setInterval(refreshToken, 14 * 60 * 1000);
  </script>
</body>
</html>
