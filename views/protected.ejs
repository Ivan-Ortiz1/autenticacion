<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Zona Protegida</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Mi App</a>
      <div class="d-flex">
        <button id="logoutBtn" class="btn btn-outline-light">Cerrar sesión</button>
      </div>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container py-5 flex-grow-1">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
      <h1 class="text-center mb-4">Zona Protegida</h1>

      <p><strong>Usuario:</strong> <%= user.username.replace(/</g,'&lt;').replace(/>/g,'&gt;') %> (ID: <%= user.id.replace(/</g,'&lt;').replace(/>/g,'&gt;') %>)</p>
      <p><strong>Rol:</strong> <%= user.role.replace(/</g,'&lt;').replace(/>/g,'&gt;') %></p>

      <div class="d-grid gap-3 mt-4">
        <button id="refreshBtn" class="btn btn-primary">Refrescar Token</button>
        <button onclick="window.location.href='/'" class="btn btn-secondary">Volver al inicio</button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <p class="mb-0">Challenge Autenticación - by Iván</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const csrfToken = '<%= csrfToken %>';

    async function refreshToken() {
      try {
        const res = await fetch('/refresh', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'CSRF-Token': csrfToken
          }
        });
        if (!res.ok) {
          alert('Sesión expirada, volviendo al login');
          window.location.href = '/';
        } else {
          console.log('Token renovado');
        }
      } catch (err) {
        console.error('Error al refrescar token:', err);
      }
    }

    document.getElementById('refreshBtn').addEventListener('click', refreshToken);

    document.getElementById('logoutBtn').addEventListener('click', async () => {
      try {
        const res = await fetch('/logout', {
          method: 'POST',
          headers: { 'CSRF-Token': csrfToken }
        });
        if (!res.ok) {
          alert('Error al cerrar sesión');
        } else {
          window.location.href = '/';
        }
      } catch (err) {
        console.error('Error en logout:', err);
      }
    });

    // Auto-refresh cada 14 minutos
    setInterval(refreshToken, 14 * 60 * 1000);
  </script>
</body>
</html>
